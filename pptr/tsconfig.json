{
	"compilerOptions": {
		"types": [
			"@testing-library/jest-dom",
			"node"
		],
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "commonjs",
		"strict": false,
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"lib": [
			"ESNext"
		],
		"skipLibCheck": true,
		"outDir": "./dist"
	},
	"include": [
		"*.ts",
		"**/*.ts"
	],
	"exclude": [
		"node_modules",
		".vscode"
	],
}